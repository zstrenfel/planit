<h1>Listing Trips</h1>

<%= link_to 'New Trip', new_trip_path %>

<table>
  <tr>
    <th>Name</th>
    <th>Location</th>
    <th>Start Date</th>
    <th>End Date</th>
    <th>Created</th>
    <th>Updated</th>
    <th>User ID</th>
    <th colspan="3"></th>
  </tr>
 
  <% @trips.each do |trip| %>
    <tr>
      <td><%= trip.id %></td>
      <td><%= trip.name %></td>
      <td><%= trip.location %></td>
      <td><%= trip.start %></td>
      <td><%= trip.end %></td>
      <td><%= trip.created_at.in_time_zone("Pacific Time (US & Canada)") %></td>
      <td><%= trip.updated_at.in_time_zone("Pacific Time (US & Canada)") %></td>
      <td><%= trip.user_id %></td>
      <td><%= link_to 'Show', trip_path(trip) %></td>
      <td><%= link_to 'Edit', edit_trip_path(trip) %></td>
      <td><%= link_to 'Destroy', trip_path(trip),
              method: :delete,
              data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
</table>

